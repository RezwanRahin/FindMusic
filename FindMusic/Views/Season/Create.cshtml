@model FindMusic.ViewModels.SeasonViewModels.CreateSeasonViewModel

@{
	ViewData["Title"] = "Create Season";
}

<div class="container mt-3">
	<h1><br>@Model.SeriesName</h1>
	<h2><br>Create Season<br></h2>

	<form method="post">
		<div asp-validation-summary="All" class="text-danger"></div>
		<partial name="_SeasonFormFields" model="Model" />
		<button type="submit" class="btn btn-primary d-inline-block">Create</button>
		<a asp-action="Details" asp-controller="Series" asp-route-slug="@Model.SeriesSlug"
		   class="btn btn-secondary d-inline-block">Cancel</a>
	</form>
</div>

@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}