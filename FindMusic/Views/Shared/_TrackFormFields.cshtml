@model FindMusic.ViewModels.TrackViewModels.CreateTrackViewModel

<input hidden asp-for="Timestamp.Id">

@if (Model.Content.Episode != null)
{
	<input hidden asp-for="Content.Episode!.SeriesName">
	<input hidden asp-for="Content.Episode!.SeriesSlug">
	<input hidden asp-for="Content.Episode!.Season">
	<input hidden asp-for="Content.Episode!.Number">

}
else if (Model.Content.Movie != null)
{
	<input hidden asp-for="Content.Movie!.Name">
	<input hidden asp-for="Content.Movie!.Slug">
}

<input hidden asp-for="Timestamp.Hour">
<input hidden asp-for="Timestamp.Minute">
<input hidden asp-for="Timestamp.Second">

<div>
	<div class="form-floating mt-3">
		<input asp-for="Title" class="form-control">
		<label asp-for="Title"></label>
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>
	<div class="form-floating mt-3 mb-4">
		<input asp-for="Url" class="form-control">
		<label asp-for="Url"></label>
		<span asp-validation-for="Url" class="text-danger"></span>
	</div>
</div>